<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context="codingpark.net.cheesecloud.view.TransferStateActivity"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/trans_bottom_bar" />

    <LinearLayout
        android:id="@+id/trans_bottom_bar"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/trans_control_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start all"
            android:layout_weight="1" />

        <Button
            android:id="@+id/trans_cancel_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel all"
            android:layout_weight="1" />

        <Button
            android:id="@+id/trans_clear_rec_bt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear all"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
